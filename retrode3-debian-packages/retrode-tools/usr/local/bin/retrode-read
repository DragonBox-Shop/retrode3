#!/bin/bash
# retrode-read slot - read game from slot

case "$1" in
	/dev/slot-snes )	# SNES
		echo "10 0 " | /usr/local/bin/retrode
		;;
	/dev/slot-md )	# MD
		echo "200" | /usr/local/bin/retrode
		;;
	/dev/slot-nes )	# NES
		echo  "00 0" | /usr/local/bin/retrode
		;;
	* )
		echo unknown device "$1"
		exit 1
		;;
esac
